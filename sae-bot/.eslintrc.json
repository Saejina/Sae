{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-await-in-loop": "off",
        "max-len": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "no-shadow": "off"
    }
}
